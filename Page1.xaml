<Page x:Class="MasterPolGerasimova.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolGerasimova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" IsVisibleChanged="Page_IsVisibleChanged" FontFamily="Segoe UI">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ListView Name="PageListView" Grid.Row="1" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <WrapPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="{Binding Pertner_type.pertner_type1}"  HorizontalAlignment="Left" FontSize="25" Margin="0,0,3,0" ></TextBlock>
                            <TextBlock Text="{Binding company_name,StringFormat= | {0}}"  HorizontalAlignment="Left" FontSize="25" TextWrapping="Wrap"></TextBlock>
                           
                        </WrapPanel>
                        <WrapPanel Grid.Column="0" Grid.Row="1"  >
                            <TextBlock Text="{Binding director_lastName,  StringFormat=Директор: {0}}"  FontSize="22"></TextBlock>
                            <TextBlock Text="  "></TextBlock>
                            <TextBlock Text="{Binding director_firstName}" FontSize="22" ></TextBlock>
                            <TextBlock Text="  "></TextBlock>
                            <TextBlock Text="{Binding director_patronymic}" FontSize="22"></TextBlock>
                        </WrapPanel>

                        <TextBlock Text="{Binding DiscountDisplay}"  Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center" FontSize="22" />

                        <TextBlock Text="{Binding phone, StringFormat=+7 {0}}" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" FontSize="22"></TextBlock>
                        <TextBlock Text="{Binding rating, StringFormat=рейтинг: {0}}" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" FontSize="22"></TextBlock>

                        <WrapPanel Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Margin="5" >
                            <Button Name="EditButton" Content="Редактировать" Click="EditButton_Click" />
                            <Button Name="SalesHistoryButton" Content="История продаж" Click="SalesHistoryButton_Click"  Width="175"/>
                        </WrapPanel>

    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Добавить" Name="AddButton" Click="AddButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top"></Button>
        <Button Content="Расчета материалов" Name="TestCalculation" Click="TestCalculation_Click" Width="230" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10"/>

    </Grid>
</Page>
